BEGIN {
   CONVFMT="%f"
}
#===============================================================================
{
   if(NR==2)
   {
      n=int(log($7)/log(10))     # powers of 10
      n=n-n%3                    # power steps of 3
      switch(n)                  # K M G
      {
         case 0 :
            s="KB"
            break
         case 3 :
            s="MB"
            break
         case 6 :
            s="GB"
      }
      printf("mem:%5.3f"s"/%5.3f%%",$7/10^n,$7/$2*100)
   }
}
#===============================================================================
END {
}
